<div class="col-sm-6 col-md-4 col-lg-4">
  <div class = "thumbnail">
    <%= link_to book do %> 
      <%= image_tag("http://covers.openlibrary.org/b/isbn/#{p.isbn}-L.jpg")%>
    <%end%> 
    <div class = "quote">
      <p><%= book.quote%></p>       
    </div>
    <div>
      <p><%=book.title%></p>
    </div>
    <div class = "author">
      <p><%=book.author%></p>
    </div>
  </div> 
</div> 