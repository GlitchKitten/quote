 
  <div class = "row">
    <div class="col-sm-6 col-md-4 col-lg-4">
      <div class = "cover_image">
        <%= link_to book do %> 
          <%= image_tag("http://images.amazon.com/images/P/#{book.isbn}.jpg", :class => "img-responsive")%>
        <%end%> 
      </div>  
      <div class = "quote">
        <p><%= book.quote%></p>       
      </div>
      <div>
        <p><%= book.title%></p>
      </div>
      <div class = "author">
        <p><%= book.author%></p>
      </div>
    </div>
  </div>
