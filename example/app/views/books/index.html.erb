<div class = "row">  
  <div class="col-sm-12 col-md-12 col-lg-12">    
    <div class = "featured_book"> 
      <ul>
        <div class = "row">
          <div class="col-sm-12 col-md-5 col-lg-4">    
          <li>
            <div class = "featured_cover">
              <%= image_tag("http://images.amazon.com/images/P/#{Book.last.isbn}.jpg", :class => "img-responsive") %>
            </div>
          </li> 
          </div>  
          <div class="col-sm-12 col-md-7 col-lg-8"> 
          <li>
            <div class = "featured_quote">
              <p>"<%= Book.last.quote %>"</p>
            </div>
          </li>
          </div>
          <div class="col-sm-12 col-md-7 col-lg-8">  
          <li>
            <div class = "featured_title">
              <%= Book.last.title %>  
            </div>
          </li>
          <li>
            <div class = "featured_author">
              <p>-<%= Book.last.author %></p>   
            </div>
          </li>
          </div>  
       </ul> 
    </div>
  </div>
</div>

<div class = "pics">  
  <% Book.all.each do |p| %>
    <div class = "index_images imgWrap">
      <%= link_to p do %> 
        <%= image_tag("http://images.amazon.com/images/P/#{p.isbn}.jpg", :class => "img-responsive imgWrap")%>
        <div class = "quote imgDescription">
          <div class = "hover_text">
          <p class = "hover_quote"><%= p.quote%></p>       
          <p class = "hover_title"><%= p.title%></p>
          <p class = "hover_author"><%= p.author%></p>
          </div>  
        </div>
      <%end%>
    </div>
  <%end%>
</div> 

<%= link_to 'New Book', new_book_path %>    

 